<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo List</title>
  <!-- Add Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-5">
    <h1 class="text-center mb-4">To-Do List</h1>

    <div class="text-end">
      <a href="/user/logout" class="btn btn-danger mb-3">Logout</a>
    </div>

    <form action="/todo/add" method="post" class="mb-4">
      <div class="input-group">
        <input type="text" name="task" class="form-control" placeholder="New Task" required>
        <button type="submit" class="btn btn-success">Add</button>
      </div>
    </form>

    <ul class="list-group">
      <% todos.forEach(todo => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= todo.task %>
          <span>
            <a href="/todo/edit/<%= todo._id %>" class="btn btn-warning btn-sm mx-2">Edit</a>
            <form action="/todo/delete/<%= todo._id %>?_method=Delete" method="post" style="display: inline;">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </span>
        </li>
      <% }) %>
    </ul>
  </div>

  <!-- Add Bootstrap JS and Popper for functionality (Optional) -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

</body>
</html>
